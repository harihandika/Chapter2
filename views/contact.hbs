<html>
    <head>
        <title>Creating Form, Navbar & Layouting</title>
        <link rel="stylesheet" href="./public/css/style.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="/public/script/script.js"></script>
    </head>
    <body>
 <!-- Navbar-->
 <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid mx-5">
    <a class="navbar-brand me-4" href="/">
      <img src="./public/assets/logo.png" alt="logo" />
    </a>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link fw-bold text-dark me-3" href="/">Home</a>
        </li>
        <li class="nav-item me-5">
          <a href="/project" class="nav-link list-active text-dark">Add Project</a>
        </li>
      </ul>
    </div>
    <div class="contact-me d-flex bg-dark rounded-3 px-2" >
      <a href="/contact" class="nav-link fw-normal text-light p-1"> Contact Me </a>
    </div>
  </div>
</nav>
<!-- Navbar -->

        <div class="container2">
            <form class="form-contact-me col-4 mb-3">
                <div class = "mb-3 fw-bold">
                    <h1 class = "text-center my-3 fw-bold">GET IN TOUCH</h1>
                    <label for="input-name" class="label-input fs-5">Name</label>
                    <input id="input-name" type="text" placeholder="Write your name"/>
                </div>
                
                <div class = "mb-3 fw-bold">
                    <label for="input-email" class="label-input fs-5">Email</label>
                    <input id="input-email" type="email" placeholder="Write your email"/>
                </div>

                <div class = "mb-3 fw-bold">
                    <label for="input-phone" class="label-input fs-5">Phone Number</label>
                    <input id="input-phone" type="tel" placeholder="Inserta your phone number"/>
                </div>

                <div class = "mb-3 fw-bold">
                    <label for="choose-subject" class="label-input fs-5 mb-2">Subject</label>
                    <select id="choose-subject">
                        <option hidden>Choose Subject</option>
                        <option>Send Your Documents</option>
                        <option>Let's Talk</option>
                        <option>Let's Collaboration</option>
                        <option>I am Hiring</option>
                    </select>
                </div>

                <div class = "mb-3 fw-bold">
                    <label for="input-message" class="label-input fs-5 mb-2">Your Message</label>
                    <textarea id="input-message" rows="8" placeholder="Write your message"></textarea>
                </div>

                <button type="button" onclick="submitForm ()">Submit</button>
            </form>
        </div>
    </body>
</html>