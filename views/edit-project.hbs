    <div id="myProjectBody">
      <!--MPI = My Project Input-->
      <div class="mpi-title">
          <p>EDIT MY PROJECT</p>
      </div>
      <!--Form-->
      <div class="mpi-form-container">
          <div class="mpi-form">
              <!--MP = My Project Input-->
              <form action = "/edit-project/{{id}}" method="post">
                  <div class="mpi-name">
                      <label for="inputProjectName">Project Name</label>
                      <input type="text" id="inputProjectName" name ='title'>
                  </div>
                  <div class="mpi-date">
                      <div class="date-start">
                          <label for="inputStartDate">Start Date</label>
                          <input type="date" id="inputStartDate" name="starDate" >
                      </div>
                      <div class="date-end">
                          <label for="inputEndDate">End Date</label>
                          <input type="date" id="inputEndDate" name="endDate" >
                      </div>
                  </div>
                  <div class="mpi-desc">
                      <label for="inputDescription">Description</label>
                      <textarea name="content" id="inputDescription"></textarea>
                  </div>
                  <div class="mpi-check-cont">
                      <label for="checkTitle">Technologies</label>
                      <div class="mpi-check">
                          <div class="check-left">
                              <div>
                                  <label for="nodejs" class="check-label">Node Js
                                  <input type="checkbox" id="nodejs" name="nodejs" value="nodejs">
                                  <span class="checkmark"></span>
                              </label>
                              </div>
                              <div>
                                  <label for="reactjs" class="check-label">React Js
                                  <input type="checkbox" id="reactjs" name="reactjs" value="reactjs">
                                  <span class="checkmark"></span>
                              </label>
                              </div>
                          </div>
                          <div class="check-right">
                              <div>
                                  <label for="nextjs" class="check-label">Next Js
                                  <input type="checkbox" id="nextjs" name="nextjs" value="nextjs">
                                  <span class="checkmark"></span>
                              </label>
                              </div>
                              <div>
                                  <label for="typescript" class="check-label">TypeScript
                                  <input type="checkbox" id="typescript" name="typescript" value="typescript">
                                  <span class="checkmark"></span>
                              </label>
                              </div>
                          </div>
                      </div>
                  </div>
                  <div>
                      <label>Upload Image</label>
                      <div class="mpi-image">
                          <label for="inputImage">
                  <div class="mpi-choose">Choose</div>
                  <div class="mpi-attach"><i class="fa-solid fa-paperclip"></i></div>
                  </label>
                          <input type="file" id="inputImage" name = "image" hidden />
                      </div>
                  </div>
                  <div class="mpi-submit">
                      <button type="submit"
                       onclick="return confirm('Are you sure to Edit this Project?');">Submit</button>
                  </div>
              </form>
          </div>
      </div>
    </div>

  </body>
</html>
